@model lab2.Models.ViewModel.LoginModel

@{
    ViewData["Title"] = "Logowanie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Logowanie</h1>
<hr />
<div class="test-danger" asp-validation-summary="All"></div>

<form asp-action="Login" asp-controller="Account" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">Nazwa użytkownika</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Hasło</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Zaloguj</button>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

