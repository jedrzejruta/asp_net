<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet"
          asp-href-include="~/lib/twitter-bootstrap/css/*.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <title>SportsStore</title>
</head>
<body>
    <div class="navbar navbar-inverse bg-inverse"
         role="navigation">
        <a class="navbar-brand" href="#">Sklep sportowy</a>
    </div>
    <div class="row m-1 p-1 ">
        <div id="categories" class="col-3">
@*@await Component.InvokeAsync("NavigationMenu")*@
            Później umieścimy tu coś użytecznego.
        </div>
        <div>
            <a class="btn btn-primary" asp-action="ListAll" asp-controller="Product">
                Wszystkie produkty
            </a>
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
				<div class="container">
								<div class="row">
												<p class="col-2">User</p>
												<input type="text" id="userInput" />
								</div>
								<div class="row">
												<p class="col-2">Message</p>
												<input type="text" id="messageInput" />
								</div>
								<div class="row">
												<input type="button" id="sendButton" value="Send Message" />
								</div>
				</div>
    <div class="row">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
    <div class="row">
        <p class="col-2" id="countUsers">Aktualnie na stronie jest połączonych: </p>
    </div>
</body>
</html>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
<script src="~/js/counter.js"></script>